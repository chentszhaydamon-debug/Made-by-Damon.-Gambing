    <script>
        // éŠæˆ²ç‹€æ…‹
        let isDrawing = false;
        let soundEnabled = true;
        let audioContext = null;
        
        // DOMå…ƒç´ 
        const digit1 = document.getElementById('digit1');
        const digit2 = document.getElementById('digit2');
        const digit3 = document.getElementById('digit3');
        const drawButton = document.getElementById('drawButton');
        const resetButton = document.getElementById('resetButton');
        const soundToggle = document.getElementById('soundToggle');
        const resultText = document.getElementById('resultText');
        
        // éå ´å‹•ç•«å…ƒç´ 
        const mythicalCutscene = document.getElementById('mythicalCutscene');
        const legendaryCutscene = document.getElementById('legendaryCutscene');
        const epicCutscene = document.getElementById('epicCutscene');
        const rareCutscene = document.getElementById('rareCutscene');
        
        // åˆå§‹åŒ–éŸ³æ•ˆç³»çµ±
        function initAudio() {
            try {
                audioContext = new (window.AudioContext || window.webkitAudioContext)();
                console.log('éŸ³æ•ˆç³»çµ±åˆå§‹åŒ–æˆåŠŸ');
            } catch (e) {
                console.log('éŸ³æ•ˆç³»çµ±åˆå§‹åŒ–å¤±æ•—:', e);
                soundToggle.style.display = 'none';
                soundEnabled = false;
            }
        }
        
        // æ’­æ”¾éŸ³æ•ˆ
        function playSound(frequency, duration, type = 'sine', volume = 0.3) {
            if (!soundEnabled || !audioContext) return;
            
            try {
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = frequency;
                oscillator.type = type;
                
                gainNode.gain.value = volume;
                gainNode.gain.exponentialRampToValueAtTime(0.001, audioContext.currentTime + duration);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + duration);
            } catch (e) {
                console.log('æ’­æ”¾éŸ³æ•ˆå¤±æ•—:', e);
            }
        }
        
        // æ’­æ”¾å’Œå¼¦éŸ³æ•ˆ
        function playChord(frequencies, duration) {
            if (!soundEnabled || !audioContext) return;
            
            frequencies.forEach(freq => {
                playSound(freq, duration, 'sine', 0.2);
            });
        }
        
        // æ›´æ–°æ•¸å­—é¡¯ç¤º
        function updateDigit(element, number) {
            element.textContent = number;
            element.style.animation = 'none';
            element.offsetHeight; // è§¸ç™¼é‡æ’
            element.style.animation = null;
        }
        
        // å‰µå»ºç²’å­æ•ˆæœ
        function createParticles(count, color) {
            for (let i = 0; i < count; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // éš¨æ©Ÿä½ç½®å’Œå¤§å°
                const size = Math.random() * 20 + 5;
                const x = Math.random() * window.innerWidth;
                const startY = window.innerHeight + 50;
                
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${x}px`;
                particle.style.top = `${startY}px`;
                particle.style.background = color || 
                    `hsl(${Math.random() * 360}, 100%, 60%)`;
                particle.style.boxShadow = `0 0 ${size}px currentColor`;
                
                // æ·»åŠ åˆ°é é¢
                document.body.appendChild(particle);
                
                // å‹•ç•«
                const duration = Math.random() * 3 + 2;
                particle.style.transition = `all ${duration}s ease-out`;
                
                setTimeout(() => {
                    particle.style.transform = `translateY(-${window.innerHeight + 100}px) 
                                               rotate(${Math.random() * 720}deg) 
                                               scale(0)`;
                    particle.style.opacity = '0';
                }, 10);
                
                // ç§»é™¤ç²’å­
                setTimeout(() => {
                    if (particle.parentNode) {
                        particle.parentNode.removeChild(particle);
                    }
                }, duration * 1000 + 100);
            }
        }
        
        // é¡¯ç¤ºéå ´å‹•ç•«
        function showCutscene(cutscene, number) {
            cutscene.style.display = 'flex';
            
            // æ’­æ”¾ç‰¹æ®ŠéŸ³æ•ˆ
            if (soundEnabled) {
                if (number === 777) {
                    playChord([261.63, 329.63, 392.00, 523.25], 2);
                } else if (number === 666) {
                    playChord([196.00, 261.63, 329.63, 392.00], 1.5);
                } else if (number === 555) {
                    playChord([261.63, 329.63, 392.00], 1);
                } else if (number === 333) {
                    playChord([196.00, 261.63, 329.63], 0.8);
                }
            }
            
            // å‰µå»ºç²’å­æ•ˆæœ
            let particleColor;
            if (number === 777) particleColor = '#ff00ff';
            else if (number === 666) particleColor = '#ffd700';
            else if (number === 555) particleColor = '#aa00ff';
            else if (number === 333) particleColor = '#00aaff';
            
            createParticles(50, particleColor);
        }
        
        // é–‹å§‹æŠ½ç
        function startDraw() {
            if (isDrawing) return;
            
            isDrawing = true;
            drawButton.disabled = true;
            resetButton.disabled = true;
            resultText.style.opacity = '0';
            
            // æ’­æ”¾é–‹å§‹éŸ³æ•ˆ
            if (soundEnabled) {
                playSound(800, 0.3);
            }
            
            // éš±è—æ‰€æœ‰éå ´å‹•ç•«
            document.querySelectorAll('.cutscene').forEach(cs => {
                cs.style.display = 'none';
            });
            
            // æ—‹è½‰å‹•ç•«
            const spinDuration = 2000; // 2ç§’
            const interval = 100; // 100æ¯«ç§’æ›´æ–°ä¸€æ¬¡
            let elapsed = 0;
            
            const spinInterval = setInterval(() => {
                // éš¨æ©Ÿæ•¸å­—
                updateDigit(digit1, Math.floor(Math.random() * 10));
                updateDigit(digit2, Math.floor(Math.random() * 10));
                updateDigit(digit3, Math.floor(Math.random() * 10));
                
                // æ’­æ”¾æ»´ç­”è²
                if (soundEnabled && elapsed % 300 === 0) {
                    playSound(400 + Math.random() * 400, 0.05);
                }
                
                elapsed += interval;
                
                // åœæ­¢æ—‹è½‰
                if (elapsed >= spinDuration) {
                    clearInterval(spinInterval);
                    
                    // æ’­æ”¾åœæ­¢éŸ³æ•ˆ
                    if (soundEnabled) {
                        playSound(1000, 0.5);
                    }
                    
                    // é¡¯ç¤ºæœ€çµ‚çµæœ
                    setTimeout(() => {
                        revealResult();
                    }, 500);
                }
            }, interval);
        }
        
        // é¡¯ç¤ºçµæœ
        function revealResult() {
            // æ±ºå®šç²çæ•¸å­—
            let finalNumber;
            const roll = Math.random() * 10000; // 0-9999
            
            if (roll < 1) { // 0.01% æ©Ÿç‡
                finalNumber = 777;
            } else if (roll < 11) { // 0.1% æ©Ÿç‡
                finalNumber = 666;
            } else if (roll < 31) { // 0.2% æ©Ÿç‡
                finalNumber = 555;
            } else if (roll < 81) { // 0.5% æ©Ÿç‡
                finalNumber = 333;
            } else {
                // éš¨æ©Ÿæ•¸å­—ï¼Œä½†é¿é–‹ç‰¹æ®Šæ•¸å­—
                do {
                    finalNumber = Math.floor(Math.random() * 1000);
                } while ([777, 666, 555, 333].includes(finalNumber));
            }
            
            // æ ¼å¼åŒ–ç‚ºä¸‰ä½æ•¸
            const finalStr = finalNumber.toString().padStart(3, '0');
            const digits = finalStr.split('');
            
            // é€å€‹é¡¯ç¤ºæ•¸å­—
            setTimeout(() => {
                updateDigit(digit1, digits[0]);
                if (soundEnabled) playSound(600, 0.2);
            }, 200);
            
            setTimeout(() => {
                updateDigit(digit2, digits[1]);
                if (soundEnabled) playSound(700, 0.2);
            }, 400);
            
            setTimeout(() => {
                updateDigit(digit3, digits[2]);
                if (soundEnabled) playSound(800, 0.3);
                
                // é¡¯ç¤ºçµæœè¨Šæ¯
                let message = '';
                let textColor = '';
                
                if (finalNumber === 777) {
                    message = 'ğŸ‰ ç¥è©±å¤§çï¼';
                    textColor = '#ff00ff';
                    setTimeout(() => showCutscene(mythicalCutscene, 777), 500);
                } else if (finalNumber === 666) {
                    message = 'ğŸ† å‚³å¥‡å¤§çï¼';
                    textColor = '#ffd700';
                    setTimeout(() => showCutscene(legendaryCutscene, 666), 500);
                } else if (finalNumber === 555) {
                    message = 'â­ å²è©©çå“ï¼';
                    textColor = '#aa00ff';
                    setTimeout(() => showCutscene(epicCutscene, 555), 500);
                } else if (finalNumber === 333) {
                    message = 'ğŸ’ ç¨€æœ‰çå“ï¼';
                    textColor = '#00aaff';
                    setTimeout(() => showCutscene(rareCutscene, 333), 500);
                } else {
                    message = 'ğŸ åƒåŠ çï¼';
                    textColor = '#00cc00';
                }
                
                resultText.textContent = message;
                resultText.style.color = textColor;
                resultText.style.opacity = '1';
                
                // é‡æ–°å•Ÿç”¨æŒ‰éˆ•
                drawButton.disabled = false;
                resetButton.disabled = false;
                isDrawing = false;
                
            }, 600);
        }
        
        // é‡ç½®éŠæˆ²
        function resetGame() {
            updateDigit(digit1, '0');
            updateDigit(digit2, '0');
            updateDigit(digit3, '0');
            resultText.style.opacity = '0';
            
            // éš±è—æ‰€æœ‰éå ´å‹•ç•«
            document.querySelectorAll('.cutscene').forEach(cs => {
                cs.style.display = 'none';
            });
            
            // æ’­æ”¾é‡ç½®éŸ³æ•ˆ
            if (soundEnabled) {
                playSound(300, 0.2);
            }
        }
        
        // äº‹ä»¶ç›£è½å™¨
        document.addEventListener('DOMContentLoaded', () => {
            // åˆå§‹åŒ–éŸ³æ•ˆ
            initAudio();
            
            // æŠ½çæŒ‰éˆ•
            drawButton.addEventListener('click', startDraw);
            
            // é‡ç½®æŒ‰éˆ•
            resetButton.addEventListener('click', resetGame);
            
            // éŸ³æ•ˆé–‹é—œ
            soundToggle.addEventListener('click', () => {
                soundEnabled = !soundEnabled;
                const icon = soundToggle.querySelector('i');
                
                if (soundEnabled) {
                    icon.className = 'fas fa-volume-up';
                    soundToggle.style.borderColor = '#00ff88';
                    playSound(1000, 0.2);
                } else {
                    icon.className = 'fas fa-volume-mute';
                    soundToggle.style.borderColor = '#ff4444';
                    playSound(400, 0.2);
                }
            });
            
            // éå ´å‹•ç•«é—œé–‰æŒ‰éˆ•
            document.querySelectorAll('.close-cutscene').forEach(button => {
                button.addEventListener('click', () => {
                    document.querySelectorAll('.cutscene').forEach(cs => {
                        cs.style.display = 'none';
                    });
                    if (soundEnabled) {
                        playSound(800, 0.2);
                    }
                });
            });
            
            // é»æ“ŠèƒŒæ™¯é—œé–‰éå ´å‹•ç•«
            document.querySelectorAll('.cutscene').forEach(cutscene => {
                cutscene.addEventListener('click', (e) => {
                    if (e.target === cutscene) {
                        cutscene.style.display = 'none';
                        if (soundEnabled) {
                            playSound(600, 0.2);
                        }
                    }
                });
            });
        });
        
        // é˜²æ­¢é é¢æ»¾å‹•
        document.addEventListener('wheel', (e) => {
            if (document.querySelector('.cutscene[style*="display: flex"]')) {
                e.preventDefault();
            }
        }, { passive: false });
        
        // éµç›¤å¿«æ·éµ
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space' && !isDrawing) {
                e.preventDefault();
                startDraw();
            } else if (e.code === 'Escape') {
                document.querySelectorAll('.cutscene').forEach(cs => {
                    cs.style.display = 'none';
                });
            } else if (e.code === 'KeyR' && e.ctrlKey) {
                e.preventDefault();
                resetGame();
            }
        });
    </script>
</body>
</html>