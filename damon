    <script>
        const digit1 = document.getElementById("digit1");
        const digit2 = document.getElementById("digit2");
        const digit3 = document.getElementById("digit3");
        const resultText = document.getElementById("resultText");
        const startButton = document.getElementById("startButton");
        const resetButton = document.getElementById("resetButton");

        let isDrawing = false;

        // Start Draw Function
        function startDraw() {
            if (isDrawing) return;

            isDrawing = true;
            resultText.textContent = "æŠ½çä¸­...";
            const numbers = [0, 0, 0];

            const interval = setInterval(() => {
                numbers[0] = Math.floor(Math.random() * 10);
                numbers[1] = Math.floor(Math.random() * 10);
                numbers[2] = Math.floor(Math.random() * 10);
                digit1.textContent = numbers[0];
                digit2.textContent = numbers[1];
                digit3.textContent = numbers[2];
            }, 100);

            setTimeout(() => {
                clearInterval(interval);
                const prize = numbers.join("");

                if (prize === "777") {
                    resultText.textContent = "ğŸ‰ æ­å–œä¸­çš„ã€ç¥è©±å¤§çã€‘ï¼";
                } else if (prize === "333") {
                    resultText.textContent = "ğŸ’ æ­å–œä¸­çš„ã€ç¨€æœ‰çå“ã€‘ï¼";
                } else {
                    resultText.textContent = "ğŸ ç²å¾—åƒåŠ çï¼Œæ„Ÿè¬åƒèˆ‡ï¼";
                }

                isDrawing = false;
            }, 2000);
        }

        // Reset Function
        function resetGame() {
            if (isDrawing) return;

            digit1.textContent = "0";
            digit2.textContent = "0";
            digit3.textContent = "0";
            resultText.textContent = "ç­‰å¾…æŠ½ççµæœ...";
        }

        // Event Listeners
        startButton.addEventListener("click", startDraw);
        resetButton.addEventListener("click", resetGame);
    </script>
